function script_getRobeSprite(index) {
	if(index == E_robe.basicPurple) {
		return spr_player;
	} else if(index == E_robe.bananaYellow) {
		return spr_playerBanana;
	} else if(index == E_robe.teleporterWhite) {
		return spr_playerWhite;
	} else if(index == E_robe.superRed) {
		return spr_playerRed;
	} else if(index == E_robe.materialGrass) {
		return spr_playerGrass;
	} else if(index == E_robe.materialCrystal) {
		return spr_playerCrystal;
	} else if(index == E_robe.materialFlesh) {
		return spr_playerFlesh;
	} else if(index == E_robe.materialMetal) {
		return spr_playerMetal;
	}
}